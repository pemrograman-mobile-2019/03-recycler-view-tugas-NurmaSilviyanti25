<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- TextView Nama Mahasiwa -->

        <TextView
            android:id="@+id/txt_nama_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:id="@+id/txt_npm_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="35dp" />

        <!-- TextView NoHp Mahasiswa -->
        <TextView
            android:id="@+id/txt_nohp_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="54dp" />

    </LinearLayout>

    <ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="117dp"
        card_view:srcCompat="@drawable/new-picture5" />
    </ConstraintLayout>

</android.support.v7.widget.CardView>